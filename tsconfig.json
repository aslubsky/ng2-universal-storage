{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noEmitHelpers": false,
        "noImplicitAny": false,
        "declaration": true,
        "skipLibCheck": true,
        "stripInternal": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "dom",
            "es6"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "files": [
        "src/ng2-universal-storage.ts"
    ]
}
